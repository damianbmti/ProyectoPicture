<%- include("templates/encabezado.ejs", { titulo: "Editar Perfil" }) %>

<div class="row">
  <div class="col-md-6 offset-md-3">
    <div class="card p-4">
      <h3>Editar perfil</h3>

      <form action="/perfil/editar" method="POST" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="email" class="form-label">Correo electrónico</label>
          <input type="email" id="email" name="email" class="form-control" value="<%= usuario.email %>" required>
        </div>

        <div class="mb-3">
          <label for="password" class="form-label">Nueva contraseña (opcional)</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Dejar en blanco para no cambiar">
        </div>

        <div class="mb-3">
          <label class="form-label">Foto actual</label>
          <div class="mb-2">
            <% if (usuario && usuario.foto) { %>
              <img src="/uploads/<%= usuario.foto %>" alt="Foto actual" style="max-width:150px;border-radius:6px;" />
            <% } else { %>
              <div style="width:150px;height:150px;background:#eee;display:flex;align-items:center;justify-content:center;border-radius:6px;">Sin foto</div>
            <% } %>
          </div>
        </div>

        <div class="mb-3">
          <label for="foto" class="form-label">Cambiar foto (subir nueva)</label>
          <input type="file" id="foto" name="foto" class="form-control" accept="image/*">
        </div>

        <div class="mb-3 form-check">
          <input type="checkbox" class="form-check-input" id="borrarFoto" name="borrarFoto">
          <label class="form-check-label" for="borrarFoto">Borrar foto actual</label>
        </div>

        <button type="submit" class="btn btn-success">Guardar cambios</button>
        <a href="/perfil" class="btn btn-secondary">Cancelar</a>
      </form>

    </div>
  </div>
</div>

<%- include("templates/pie.ejs") %>
